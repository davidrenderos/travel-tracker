BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Sort by:'
        Spinner:
            id: state_selection
            text: app.current_selection
            values: app.sort_by
        Label:
            text: 'Add new place...'
        Label:
            text: 'Name : '
        Label:
            text: 'Country : '
        Label:
            text: 'Priority : '
        Button:
            text: 'Add Place'
        Button:
            text: 'Clear'

    BoxLayout:
        orientation: 'vertical'
        Label:
            id: places_to_visit_label
            text: app.places_to_visit
        BoxLayout:
            orientation: 'vertical'
            id: box
        Label:
            id: place_status_label
            text: app.place_status
