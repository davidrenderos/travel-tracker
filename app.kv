BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 200
        Label:
            text: 'Sort by:'
        Spinner:
            id: sort_selection
            text: app.current_selection
            values: app.sort_by
            on_text: app.new_spinner_selection(self.text)
        Label:
            text: 'Add new place...'
        Label:
            text: 'Name:'
        TextInput:
            id: new_name
            text: ''
            multiline: False
            write_tab: False
        Label:
            text: 'Country:'
        TextInput:
            id: new_country
            text: ''
            multiline: False
            write_tab: False
        Label:
            text: 'Priority:'
        TextInput:
            id: new_priority
            text: ''
            multiline: False
            write_tab: False
        Button:
            text: 'Add Place'
            id: add_button
            on_press: app.handle_press_add(new_name.text, new_country.text, new_priority.text)
        Button:
            text: 'Clear'
            id: clear_button
            on_press: app.clear_fields()
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: places_to_visit_label
            text: app.places_to_visit
            size_hint_y: None
            height: 55
        BoxLayout:
            orientation: 'vertical'
            id: place_box
        Label:
            id: place_status_label
            text: app.place_status
            size_hint_y: None
            height: 55